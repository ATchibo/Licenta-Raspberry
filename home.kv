#:kivy 2.3.0

<ContentNavigationDrawer>

    MDList:

        MDNavigationDrawerHeader:
            title: "Plant Buddy"
            spacing: "4dp"
            padding: "12dp", 0, 0, "56dp"

        OneLineListItem:
            text: "Home Screen"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "home"
                app.root.ids.toolbar.title = "Home"

        OneLineListItem:
            text: "Connect"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "connect"
                app.root.ids.toolbar.title = "Connect"

        OneLineListItem:
            text: "Settings"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "settings"
                app.root.ids.toolbar.title = "Settings"

        OneLineListItem:
            text: "Calibration"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "calibrate"
                app.root.ids.toolbar.title = "Calibration"

        OneLineListItem:
            text: "Exit"
            on_press: app.stop()

MDScreen:

    MDNavigationLayout:

        MDTopAppBar:
            id: toolbar
            pos_hint: {"top": 1}
            elevation: 1
            title: "Home"
            specific_text_color: 0.9, 1, 1, 1
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDScreenManager:
            id: screen_manager
            size_hint_y: None
            height: root.height - toolbar.height

            HomePage:
            ConnectPage:
            SettingsPage:
            CalibrationPage:
            MoistureCalibrationView:
            PumpCalibrationView:
            DepthCalibrationView:

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            ContentNavigationDrawer:
                id: navigation_drawer
                screen_manager: screen_manager
                nav_drawer: nav_drawer